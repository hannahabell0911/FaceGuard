<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/whiteBox"
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="16dp"
        android:background="#FFFFFF">

        <!-- Content inside the white box -->
        <!-- For example, you can add a TextView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:padding="16dp"
            android:text="FaceGuard273PF"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="70dp"
            android:text="34 Redwood Road, Dundalk"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/greenButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/button" />

        <ImageView
            android:id="@+id/purpleOval"
            android:layout_width="158dp"
            android:layout_height="114dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="30dp"
            android:padding="50dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/oval" />

        <ImageView
            android:id="@+id/house"
            android:layout_width="98dp"
            android:layout_height="94dp"
            android:layout_gravity="bottom|right"
            android:layout_marginLeft="0dp"
            android:padding="10dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/house" />

    </androidx.cardview.widget.CardView>

    <!-- Linear layout for additional image -->


    <!-- Green button image in the top right corner -->

    <!-- Linear layout to hold text, arrow, and plus sign -->
    <LinearLayout
        android:id="@+id/upperLinearLayout"
        android:layout_width="374dp"
        android:layout_height="86dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="21dp"
        android:orientation="horizontal">

        <!-- "Hannah's Home" text -->
        <TextView
            android:id="@+id/hannahsHomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hannah's Home"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/dropdownIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/dropdown1" />

        <ImageView
            android:id="@+id/plusIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/plus" />


    </LinearLayout>

    <!-- Linear layout for "Connected Devices" text -->
    <!-- Linear layout for "Connected Devices" text and icon -->
    <LinearLayout
        android:id="@+id/connectedDevicesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/upperLinearLayout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">

        <!-- "Connected Devices" text -->

        <!-- Device icon -->

        <TextView
            android:id="@+id/connectedDevicesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Connected Devices"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/deviceIcon"
            android:layout_width="74dp"
            android:layout_height="94dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/doorbell" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/whiteBox"
        android:layout_marginTop="16dp">


        <ImageView
            android:id="@+id/additionalImage2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:padding="10dp"
            android:src="@drawable/messages" />
    </LinearLayout>
    <!-- Linear layout for the toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="8dp">

        <!-- Icon 1 with text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/people2"
                android:contentDescription="Icon 1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Known Faces"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </LinearLayout>

        <!-- Icon 2 with text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/home1"
                android:contentDescription="Icon 2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </LinearLayout>

        <!-- Icon 3 with text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/me"
                android:contentDescription="Icon 3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Account"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/composeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="16dp"/>

</RelativeLayout>